<div class="row">
  <div class="col-xs-8 col-sm-10 col-md-10">
    <h1>Tweets</h1>
  </div>
  <div class="col-xs-4 col-sm-2 col-md-2">
    <%= link_to 'New tweet', new_tweet_path, class: "btn btn-info btn-sm" %>
  </div>
</div>

<div class="row">
  <% @tweets.reverse.each do |tweet| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= link_to(image_tag(tweet.url_photo), tweet) if tweet.url_photo? %>
        <div class="caption">
          <small><%= time_ago_in_words(tweet.created_at) %> ago</small>
          <p><%= tweet.content.truncate(150)  %></p>
          <p><%= link_to 'Show', tweet, class: "btn btn-primary" %> 
          <% if current_user&.id == tweet.user_id %>
           <%= link_to 'Edit', edit_tweet_path(tweet), class: "btn btn-warning" %>
           <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>


<br>
